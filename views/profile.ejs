<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> User Information</h3>

                    <p>
                        <strong>id</strong>: <%= user.ID %><br>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>password</strong>: <%= user.password %>
                    </p>

            </div>
        </div>

        <!-- Database Information -->
        <div class = "col-sm-6">
          <div class = "well">
            <h3><span class = "fa fa-user"></span> Report</h3>
            <% if(user.report === true) { %>
                  <a href="/view-report" class="btn btn-default"><span class="fa fa-user"></span> View Database </a>
              <% } else { %>
                  <a href="/make-report" class="btn btn-default"><span class="fa fa-user"></span> Make Report </a>
                <% } %>
          </div>
        </div>

    </div>

</div>
</body>
</html>
